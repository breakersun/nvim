{
	"gantt": {
		"prefix": "gantt",
		"body": [
			"@startgantt",
			"printscale weekly",
			"saturday are closed",
			"sunday are closed",
			"",
			"Project starts $1",
			"@endgantt"
		],
		"description": "Gantt Project Template\nDate Format YYYY-MM-DD"
	},

	"task": {
		"prefix": "task",
		"body": [
			"[$1] as [$2] lasts $3 days"
		],
		"description": "Task for Gantt Project"
	},

	"first task starts": {
		"prefix": "startt1",
		"body": [
			"[$1] starts $2"
		],
		"description": "First Task Starts at $date \nDate Format YYYY-MM-DD"
	},

	"task starts": {
		"prefix": "startt",
		"body": [
			"[$1] starts at [$2]'s end"
		],
		"description": "Task Starts at One's End"
	},

	"mind map": {
		"prefix": "mindmap",
		"body": [
			"@startmindmap",
			"*$1",
			"\t*$2",
			"@endmindmap"
		]
	}
}
